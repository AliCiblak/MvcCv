
@using MvcCv.Models.Entity
@model List<TblSosyalMedyalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content-->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesabı Listem</h3>
                            </div>
                            <!-- /.card-header-->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal"data-target="#Modal1">
                                    Sosyal Medya Hesabı Ekle
                                </button>
                                <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                @if (item.Durum == true)
                                                 {
                                                    <td>Aktif</td>
                                                }
                                                else if(item.Durum == false)
                                                {
                                                    <td>Pasif</td>
                                                }
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/Duzenle/@item.ID">
                                                        <!--ID'den gelen değere göre-->
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/Sil/@item.ID">
                                                        <i class="fa fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card  -->
                    </div>
                    <!-- /.col -->
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <!--Modal Pop-up oluşturalım-->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Ekleme Paneli</h2>
                    </div>
                    <form  method="post" action="/SosyalMedya/Ekle">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" value="" class="form-control">
                            <br />
                            <label>Sosyal Medya Link</label>
                            <input type="text" name="Link" value="" class="form-control">
                            <br />
                            <label>Icon İsmi</label>
                            <input type="text" name="ikon" value="" class="form-control">
                            <br />
                            <button class="btn btn-info">Kaydet</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



